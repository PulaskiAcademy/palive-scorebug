        <Image x:Name="Image1" Margin="1.5,54.551,759.75,0" Source="Z:\Downloads\PA Live\logos\AFD-dark.png" Tag="Z:\Downloads\PA Live\logos\AFD-dark.png" Grid.RowSpan="1" Height="Auto" d:LayoutOverrides="VerticalAlignment"/>
