                <TransformGroup>
                    <ScaleTransform ScaleX="0.8"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Image x:Name="ImageHome" HorizontalAlignment="Right" Margin="0,42.333,432.833,0" Width="40.25" Source="Pulaski Academy.png" VerticalAlignment="Top" Height="32.668"/>
        <Image x:Name="ImageAway" HorizontalAlignment="Right" Margin="0,42.333,714,0" Width="40.25" Source="Pulaski Academy.png" VerticalAlignment="Top" Height="32.668"/>
