                        <Rectangle x:Name="TimeoutHome4" Style="{DynamicResource TimeoutON}" Margin="60,0,0,5" RenderTransformOrigin="0.5,0.5" Width="17" HorizontalAlignment="Left" d:LayoutOverrides="Width"/>
